<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  
  <!-- Servlets -->
  <servlet>
    <servlet-name>greetServlet</servlet-name>
    <servlet-class>ch.paso.address.server.GreetingServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>greetServlet</servlet-name>
    <url-pattern>/ch_paso_address/greet</url-pattern>
  </servlet-mapping>
    <servlet>
  	<servlet-name>PersonService</servlet-name>
  	<servlet-class>ch.paso.address.server.services.PersonService</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>PersonService</servlet-name>
  	<url-pattern>/ch_paso_address/PersonService</url-pattern>
  </servlet-mapping>
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>Ch_paso_address.html</welcome-file>
  </welcome-file-list>


</web-app>
